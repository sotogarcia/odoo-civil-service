<?xml version="1.0" encoding="utf-8"?>

<odoo noupdate="0">

    <record id="ir_cron_academy_public_tendering_update_states_daily" model="ir.cron">
        <field name="name">Academy public tendering: Update states</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_academy_public_tendering_process"/>
        <field name="code">model.update_states()</field>
        <field name="state">code</field>
    </record>

    <record id="action_update_states_server" model="ir.actions.server">
        <field name="type">ir.actions.server</field>
        <field name="name">Update states</field>
        <field name="model_id" ref="model_academy_public_tendering_process" />
        <field name="sequence" eval="5" />
        <field name="binding_model_id" ref="academy_public_tendering.model_academy_public_tendering_process" />
        <field name="state">code</field>
        <field name="code">action = model.update_states()</field>
    </record>
    
</odoo>

